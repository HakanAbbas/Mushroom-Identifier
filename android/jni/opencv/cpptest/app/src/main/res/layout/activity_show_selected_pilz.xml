<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_show_selected_pilz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mushroom.android.cpptest.showSelectedPilzActivity">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilz: \n \n"
     />

    <TextView
        android:id="@+id/poisonous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:text="Ist der Pilz giftig? \n \n"
    />

    <TextView
        android:id="@+id/round"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/poisonous"
        android:text="Ist der Pilz rund?  \n \n"
     />

    <TextView
        android:id="@+id/lamella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/round"
        android:text="Hat der Pilz Lamellen? \n \n"
   />

    <TextView
        android:id="@+id/nodule"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lamella"
        android:text="Hat der Pilz eine Knolle? \n \n"
    />

    <TextView
        android:id="@+id/stalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nodule"
        android:text="Wie schaut der Stiel aus? \n \n"
    />

    <TextView
        android:id="@+id/wiki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stalk"
        android:text="FÃ¼r mehr Informationen klicken Sie bitte auf diesen Wikipedia link: "
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/fliegenpilz"
        android:id="@+id/imageViewPilz"
        android:layout_above="@+id/lamella"
        android:layout_toRightOf="@id/lamella"
        android:layout_marginRight="20dp"/>


</RelativeLayout>
